datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  createdAt DateTime @default(now())
  email     String?  @unique
  firstName String?
  id        String   @id @default(cuid())
  lastName  String?
  password  String
  roles     Json
  updatedAt DateTime @updatedAt
  username  String   @unique
}

model Tweet {
  account   Account? @relation(fields: [accountId], references: [id])
  accountId String?
  content   String?
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  likes     Like[]
  updatedAt DateTime @updatedAt
}

model Follow {
  createdAt DateTime @default(now())
  follower  String?
  following String?
  id        String   @id @default(cuid())
  updatedAt DateTime @updatedAt
}

model Like {
  account   Account? @relation(fields: [accountId], references: [id])
  accountId String?
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  tweet     Tweet?   @relation(fields: [tweetId], references: [id])
  tweetId   String?
  updatedAt DateTime @updatedAt
}

model Account {
  bio       String?
  createdAt DateTime @default(now())
  email     String?
  id        String   @id @default(cuid())
  likes     Like[]
  tweets    Tweet[]
  updatedAt DateTime @updatedAt
  username  String?
}
